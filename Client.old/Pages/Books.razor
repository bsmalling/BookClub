@page "/books"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@using BookClub.Models
@inject BookClubRestClient bookClubRestClient

<h1>Books</h1>

<table>
    <tr>
        <th>Title</th>
        <th>Author</th>
    </tr>
    @foreach (var book in books)
    {
        <tr>
            <td>
                @book.Title
            </td>
            <td>
                @book.Author
            </td>
        </tr>
    }
</table>

@code {
    private IList<Book> books = null;

    protected override void OnInitialized()
    {
        books = Task.Run(() => bookClubRestClient.GetListAsync<Book>(BookClubRestClient.BookRoute)).Result;
    }
}
